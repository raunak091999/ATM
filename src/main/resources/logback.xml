<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{20} %mdc%n%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.asr.experiment" level="DEBUG"/>
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>